<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="@dimen/rv_left"
    android:layout_marginRight="@dimen/rv_right"
    android:layout_marginBottom="8dp"
    app:cardUseCompatPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="@color/colorF300s"
            android:layout_width="4dp"
            android:minHeight="50dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="66dp"
                android:text="Ficha 300"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="66dp"
                tools:text="Pedro Frans Maita Vicente"
                android:textColor="#de000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvEvolucion"
                android:layout_below="@id/tvNombre"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="66dp"
                tools:text="EvoluciÃ³n: Estacionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_below="@id/tvEvolucion"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="66dp"
                android:layout_marginBottom="8dp"
                tools:text="Fecha: 28/04/2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivEdit"
                android:background="@drawable/bg_circle_edit_f300"
                android:src="@drawable/ic_pencil_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:visibility="visible"
                android:visibility="gone"
                android:scaleType="center"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivSend"
                android:src="@drawable/ic_tick"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>