<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.MenPriActivity">

    <ImageView
        android:id="@+id/LivBanner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/banners"
        app:srcCompat="@drawable/banners"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/LivFondos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/fondo_app"
        app:srcCompat="@drawable/fondo_app"
        app:layout_constraintTop_toBottomOf="@+id/LivBanner"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/LtvFormul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/formul_titulox"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:fontFamily="@font/arial"
        app:layout_constraintTop_toBottomOf="@+id/LivBanner"
        tools:layout_editor_absoluteX="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llF100"
            android:clickable="true"
            android:background="@drawable/bg_f100"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_flask_empty_outline_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="F100: Prueba Rápida"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llF200"
            android:clickable="true"
            android:background="@drawable/bg_f200"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_eye_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="F200: Investigación Epidemiológica"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llF300"
            android:clickable="true"
            android:background="@drawable/bg_f300"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_medical_bag_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="F300: Seguimiento Clínico"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>