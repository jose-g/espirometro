<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="@dimen/long_imagen"
                android:layout_height="@dimen/long_imagen"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"

                android:elevation="1dp">

                <ImageView
                    android:id="@+id/foto_personal"
                    android:layout_width="@dimen/long_imagen"
                    android:background="@drawable/expediente"
                    android:layout_height="@dimen/long_imagen"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    />
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorRedss"
                android:layout_toEndOf="@+id/linearLayout"
                android:id="@+id/linearLayout2"
                android:layout_width="1dp"
                android:layout_height="@dimen/long_imagen"
                android:orientation="horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/long_imagen"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/C_apellido"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="0dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_detalle"  />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/colorRedss"

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/ly_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/C_nombres"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="0dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_detalle"  />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/colorRedss"

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout


                    android:id="@+id/ly_dni"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tipo_dni"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="0dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_detalle"  />

                    <TextView
                        android:id="@+id/C_dni"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="0dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_detalle" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>