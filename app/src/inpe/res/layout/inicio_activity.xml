<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.InicioActivity">

    <ImageView
        android:id="@+id/LivBanner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/banners"
        app:srcCompat="@drawable/banners"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Fondos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/fondo_app"
        app:srcCompat="@drawable/fondo_app"
        app:layout_constraintTop_toBottomOf="@+id/LivBanner"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/Logos"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo_app"
        app:srcCompat="@drawable/logo_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LivBanner"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        app:layout_constraintTop_toBottomOf="@id/Logos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>